          },
          "phone" : {
            "type" : "string",
            "example" : 6.12345678E8
          }
        }
      },
      "Shift" : {
        "type" : "object",
        "required" : [ "User", "date", "start", "end", "shiftId", "open" ],
        "properties" : {
          "User" : {
            "$ref" : "#/components/schemas/User"
          },
          "date" : {
            "type" : "string",
            "format" : "date-time",
            "example" : "2019-11-11T00:00:00.000Z"
          },
          "start" : {
            "type" : "string",
            "format" : "time",
            "example" : "08:00 a.m."
          },
          "end" : {
            "type" : "string",
            "format" : "time",
            "example" : "11:00 a.m."
          },
          "shiftId" : {
            "type" : "integer",
            "example" : 13
          },
          "open" : {
            "type" : "boolean",
            "example" : true
          }
        }
      },
      "appurls" : {
        "type" : "array",
        "required" : [ "name", "url" ],
        "items" : {
          "properties" : {
            "name" : {
              "type" : "string",
              "example" : "profile"
            },
            "start" : {
              "type" : "string",
              "example" : "/user/profile"
            }
          }
        }
      }
    },
    "responses" : {
      "usernotfound" : {
        "description" : "User not found"
      },
      "forbidden" : {
        "description" : "You are not logged in."
      }
    }
